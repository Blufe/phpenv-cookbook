<% unless @definition["apxs2_path"].blank? %>
with_apxs2 "<%= @definition["apxs2_path"] %>"
<% end -%>
<% if @definition["url"].blank? -%>
install_package "https://secure.php.net/distributions/php-<%= @version %>.tar.bz2"
<% else -%>
install_package "<%= @definition["url"] %>"
<% end -%>
<% unless @definition["xdebug_version"].blank? -%>
install_xdebug "<%= @definition["xdebug_version"] %>"
<% end -%>
enable_builtin_opcache
<% @definition["plugins"].each do |plugin| -%>
install_<%= plugin %>
<% end -%>
